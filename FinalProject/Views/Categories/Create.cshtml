@model Category
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kursa Kateqoriya Əlavə Et</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                     <div class="form-group">
                        <label>Kurs Seç</label>
                        <select asp-for="@Model.CourseId" class="form-control" name="courseId">
                            @foreach (Course course in ViewBag.Courses)
                            {
                                        <option value="@course.Id">@course.Name</option>

                            }
                        </select>
                        <span asp-validation-for="@Model.CourseId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Name">Kateqoriya Adı</label>
                        <input asp-for="@Model.Name" class="form-control">
                        <span asp-validation-for="@Model.Name" class="text-danger">  </span>
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Yadda Saxla</button>
                    <a asp-action="Index" class="btn btn-light">Ləğv Et</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {
        <partial name="_ValidationScriptsPartial" />
}
