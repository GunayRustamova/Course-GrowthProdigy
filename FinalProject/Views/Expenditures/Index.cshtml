@model List<Expenditure>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h2 class="card-title">Xərclər</h2>
                    <a asp-action="Create" class="btn btn-primary text-white btn-rounded" title="Əlavə et"> <i class="fa-solid fa-plus" style="font-size:20px; width:25px;"></i> </a>
                </div>
                <div class="table-responsive" style="overflow:hidden">
                    <table class="table table-hover" style="text-align:center">
                        <thead>
                            <tr style="text-align:center;">
                                <th>ID</th>
                                <th>Xərc Məbləği</th>
                                <th>Xərc Haqqında</th>
                                <th>Xərcin Vaxtı</th>
                                <th>Qeyd Edən Şəxs</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Expenditure item in Model)
                            {

                                <tr style="text-align:center;">
                                    <td>@item.Id</td>
                                    <td>@item.Money  ₼</td>
                                    <td>@item.Description</td>
                                    <td>@item.ExpenditureTime.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.AppUser?.Name</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-12">
    <div class="card">
        <nav aria-label="Page navigation example" class="d-flex justify-content-center">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(ViewBag.CurrentPage-1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>

                @for (int i = 1; i <= ViewBag.PageCount; i++)
                {
                    if (ViewBag.CurrentPage == i)
                    {
                        <li class="page-item disabled">
                            <a class="page-link " asp-route-page="@i">@i</a>
                        </li>

                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-route-page="@i">@i</a>
                        </li>

                    }

                }
                <li class="page-item">
                    <a class="page-link" asp-route-page="@(ViewBag.CurrentPage+1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>

            </ul>
        </nav>
    </div>
</div>