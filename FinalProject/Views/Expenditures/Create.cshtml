@model Expenditure
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Xərc Əlavə Et</h4>

                <form class="forms-sample" method="post">

                    <div class="form-group">
                        <label asp-for="@Model.Money">Xərc Məbləği</label>
                        <input asp-for="@Model.Money" class="form-control">
                        <span asp-validation-for="@Model.Money" class="text-danger">  </span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Description">Xərc Haqqında</label>
                        <input asp-for="@Model.Description" class="form-control">
                        <span asp-validation-for="@Model.Description" class="text-danger">  </span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Yadda Saxla</button>
                    <a asp-action="Index" class="btn btn-light">Ləğv Et</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {

        <partial name="_ValidationScriptsPartial" />
}

