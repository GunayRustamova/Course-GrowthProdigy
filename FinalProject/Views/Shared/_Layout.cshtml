<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Course</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <link rel="stylesheet" href="~/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/vendors/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/vendors/flag-icon-css/css/flag-icon.min.css" />
    <link rel="stylesheet" href="~/vendors/mdi/fonts/materialdesignicons-webfont.ttf">
    <link rel="stylesheet" type="text/css" href="~/js/select.dataTables.min.css">
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link type="text/css" href="~/css/material-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="canonical" href="http://fontawesome.com/icons/chalkboard-user" />
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/all.css">

    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.1/css/sharp-solid.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Andika:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="~/images/mg_logo-removebg-preview.png"/>
    <style>
        * {
            font-family: Andika;
        }
    </style>
    <style>
        .mdi-account-multiple, .icon-grid, .fa-credit-card, .fa-circle-dollar-to-slot, .mdi-home, .mdi-book-open, .fa-coins, .mdi-book-open-variant, .mdi-library-books, .mdi-account-box-outline, .fa-users-line, .fa-chalkboard-user, .fa-screen-users, .fa-money-check-dollar, .fa-users, .mdi-book-multiple, .fa-user {
            font-size: 30px;
            width: 40px;
        }

        .book-animation-1 {
            float: right;
            width: 100px;
            margin-bottom: 0px;
            animation: off-on 10s linear infinite;
            overflow-clip-margin: content-box;
            overflow: clip;
        }

        .book-animation-2 {
            width: 100px;
            margin-bottom: 0px;
        }

        .footer-images {
            background-color: #F5F7FF;
        }
    </style>
</head>
<body>
    <div class="container-scroller">
        <!-- partial:partials/_navbar.html -->
        <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a asp-controller="Dashboard" asp-action="Index"><img src="~/images/my_logo (1).svg" class="mr-2" alt="logo" style="width:230px; " /></a>
                <a class="navbar-brand brand-logo-mini" href="index.html"><img src="~/images/mg_logo-removebg-preview.png" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="icon-menu"></span>
                </button>
                <ul class="navbar-nav mr-lg-2">
                    <li class="nav-item nav-search d-none d-lg-block">
                        <div class="input-group">
                            <div class="input-group-prepend hover-cursor" id="navbar-search-icon">
                                <span class="input-group-text" id="search">
                                    <i class="icon-search"></i>
                                </span>
                            </div>
                            <div>
                                <form>
                                    <input type="text" class="form-control" id="navbar-search-input" placeholder="Search now" aria-label="search" aria-describedby="search">

                                </form>
                            </div>
                            @*
                                <ul style="background-color: azure; height:200px; overflow:scroll;">
                                <li style="display:flex; justify-content:left; align-items:center;">
                                </li>
                            </ul>*@
                        </div>

                    </li>
                </ul>
                <ul class="navbar-nav navbar-nav-right">
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="icon-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">

            <!-- partial -->
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar" style="width:290px;">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Dashboard" asp-action="Index">
                            <i class="mdi mdi-home" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Əsas Səhifə</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Users" asp-action="Index">
                            <i class="fa-solid fa-user" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">İstifadəçilər</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Positions" asp-action="Index">
                            <i class="fa-duotone fa-chalkboard-user" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Vəzifələr</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic" style="width:293px; height:67px;">
                            <i class="mdi mdi-book-multiple" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px; ">Akademiya</span>
                            <i class="menu-arrow" style="margin-right:40px;"></i>
                        </a>
                        <div class="collapse" id="ui-basic">
                            <ul class="nav flex-column sub-menu">
                                <li class="nav-item"> <a class="nav-link" asp-controller="Courses" asp-action="Index">Kurslar</a></li>
                                <li class="nav-item"> <a class="nav-link" asp-controller="Categories" asp-action="Index">Kateqoriyalar</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Employees" asp-action="Index">
                            <i class="mdi mdi-account-multiple" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">İşçilər</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Groups" asp-action="Index">
                            <i class="fa-solid fa-users-line" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Qruplar</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Students" asp-action="Index">
                            <i class="fa-solid fa-screen-users" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Tələbələr</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Lessons" asp-action="Index">
                            <i class="mdi mdi-book-open-variant" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Dərslər</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Assignments" asp-action="Index">
                            <i class="mdi mdi-library-books" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Tapşırıqlar</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Quizzes" asp-action="Index">
                            <i class="mdi mdi-book-open" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Quizlər</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Expenditures" asp-action="Index">
                            <i class="fa-solid fa-money-check-dollar" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Xərclər</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Income" asp-action="Index">
                            <i class="fa-duotone fa-circle-dollar-to-slot" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Gəlirlər</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="Cash" asp-action="Index">
                            <i class="fa-solid fa-coins" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Kassa</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" style="width:293px; height:67px;" asp-controller="PaidSalary" asp-action="Index">
                            <i class="fa-solid fa-credit-card" style="margin-right:1rem;"></i>
                            <span class="menu-title" style="font-size:20px;">Ödənilmiş Maaşlar</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()

                </div>
                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <div class="footer-images">
                    <img class="footer-1 book-animation-1" src="~/images/footer/footer-1.png" />
                    <img class="footer-2 book-animation-2" src="~/images/footer/footer-2.png" />
                </div>
                <footer class="footer">

                    <div class="d-sm-flex justify-content-center justify-content-sm-between footer-copyright">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block"> © 2022-2023 Rüstəmova Günay </span>
                    </div>
                </footer>
                <!-- partial -->
            </div>
            <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="~/vendors/chart.js/Chart.min.js"></script>
    <script src="~/vendors/datatables.net/jquery.dataTables.js"></script>
    <script src="~/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
    <script src="~/js/dataTables.select.min.js"></script>

    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="~/js/off-canvas.js"></script>
    <script src="~/js/hoverable-collapse.js"></script>
    <script src="~/js/template.js"></script>
    <script src="~/js/settings.js"></script>
    <script src="~/js/todolist.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page-->
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/Chart.roundedBarCharts.js"></script>
    @RenderSection("Scripts", false)
    <script src="https://code.jquery.com/jquery-3.6.2.js"></script>
    <!-- End custom js for this page-->
</body>

</html>


